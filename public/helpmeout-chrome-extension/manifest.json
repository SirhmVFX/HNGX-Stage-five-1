{
    "manifest_version": 3,
    "name": "Help Me Out",
    "description": "This extension helps you record and share help videos with ease.",
    "version": "1.0",
    "icons": {
        "128": "/images/img128px.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/img16px.png",
            "32": "/images/img32px.png",
            "128": "/images/img128px.png"
        }

    },
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "*://*/*"
    ], 

    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ]
}